{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": [
        {
          "owner": "ng",
          "source": "tslint",
          "applyTo": "allDocuments",
          "fileLocation": "absolute",
          "severity": "warning",
          "pattern": {
            "regexp": "^(WARNING|ERROR):(\\s+\\(\\S*\\))?\\s+(\\S.*):(\\d+):(\\d+)\\s+-\\s+(.*)$",
            "severity": 1,
            "file": 3,
            "line": 4,
            "column": 5,
            "message": 6
          }
        }
      ]
    },
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$tsc-watch"
    },
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": "$tsc"
    }
  ]
}
