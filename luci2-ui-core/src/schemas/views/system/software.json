{
  "widget": "tabs",

  "options": {
    "tabLabels": ["Installed", "Available"]
  },
  "content": [
    {
      "widget": "table",
      "onInit": "data = ubus('luci2.opkg', 'list_installed')",
      "options": {
        "colKeys": ["0", "1"],
        "colHeaders": ["Package", "Version"],
        "dataSource=": "data.packages",
        "filterBy": [1],
        "actions": [
          {
            "icon": "delete",
            "label": "Uninstall",
            "action": "ubus('luci2.opkg','remove', { package: $data[0]})"
          }
        ]
      }
    }
  ]
}
