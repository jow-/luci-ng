{
  "widget": "form",
  "bind": "$model",

  "content": [
    {
      "widget": "autocomplete",
      "bind": "$model.service",
      "options": {
        "title": "Service",
        "description": "Ubus service",
        "enum=": "ubusList()"
      }
    },
    {
      "widget": "autocomplete",
      "bind": "$model.method",
      "options": {
        "title": "Method",
        "description": "Ubus method",
        "enum=": "Object.keys(ubusList([$model.service])[$model.service] || {})"
      }
    },
    {
      "widget": "input",
      "bind": "$model.params",
      "options": {
        "title": "Method",
        "description=": "JSON.stringify(ubusList([$model.service])[$model.service][$model.method])"
      }
    },
    {
      "widget": "input",
      "bind": "$model.path",
      "options": {
        "title": "jsonPath filter",
        "description=": "Transformation to apply to result"
      }
    },
    {
      "widget": "button",
      "bind": "$model.refresh",
      "options": {
        "title": "Execute",
        "click": "ubus($model.service, $model.method, $model.params.trim() ? JSON.parse($model.params) : {}, $model.path)"
      }
    },
    {
      "widget": "code",
      "options": {
        "text=": "`ubus('${$model.service}', '${$model.method}', ${JSON.stringify(JSON.parse($model.params.trim()) || {})} ${$model.path ? `, '${$model.path}'` : ''})`"
      }
    },
    {
      "widget": "code",
      "options": {
        "text=": "JSON.stringify($model.refresh, null, 4)"
      }
    }
  ]
}
